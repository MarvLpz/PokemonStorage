@model PokemonStorage.Models.Pokemon 
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            <div>
                @Html.LabelFor(model => model.TID)
                @Html.TextBoxFor(model => model.TID)
            </div>
            <div>
                @Html.LabelFor(model => model.PName)
                @Html.TextBoxFor(model => model.PName)
            </div>
            <div>
                @Html.LabelFor(model => model.PNickname)
                @Html.TextBoxFor(model => model.PNickname)
            </div>
            <div>
                @Html.LabelFor(model => model.PLevel)
                @Html.TextBoxFor(model => model.PLevel)
            </div>
            <div>
                @Html.LabelFor(model => model.PType)
                @Html.TextBoxFor(model => model.PType)
            </div>
            <div>
                @Html.LabelFor(model => model.PGender)
                @Html.TextBoxFor(model => model.PGender)
            </div>
            <div>
                @Html.LabelFor(model => model.PShiny)
                @Html.TextBoxFor(model => model.PShiny)
            </div>
            <div>
                @Html.LabelFor(model => model.PBox)
                @Html.TextBoxFor(model => model.PBox)
            </div>
            <div>
                <input type="submit" name="action" value="Deposit" />
                <input type="submit" name="action" value="Clear" />
            </div>
            <div>
                @Html.Action("Box1", "Box")
            </div>
        }
    </div>
</body>
</html>
